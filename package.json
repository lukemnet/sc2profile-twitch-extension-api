{
  "name": "sc2pte-backend",
  "version": "2.0.0",
  "private": true,
  "description": "StarCraft II Profile Twitch extension - backend service (EBS)",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "npm run lint && npm run test && npm run clean && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint --project tsconfig.json",
    "runbas": "npm --prefix ../bnet-auth-service start",
    "watch": "tsc-watch --onSuccess \"npm start\"",
    "dev": "npm run watch | pino-pretty",
    "test": "jest",
    "clearTestCache": "jest --clearCache",
    "start": "node scripts/start.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukemnet/sc2pte-backend.git"
  },
  "keywords": [
    "starcraft",
    "starcraft2",
    "community",
    "api",
    "player",
    "backend"
  ],
  "author": "Łukasz Wójcik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukemnet/sc2pte-backend/issues"
  },
  "homepage": "https://github.com/lukemnet/sc2pte-backend#readme",
  "dependencies": {
    "fastify": "2.13.0",
    "fastify-caching": "5.0.0",
    "fastify-cors": "3.0.2",
    "fastify-env": "1.0.1",
    "fastify-ioredis": "0.1.1",
    "fastify-log": "1.2.1",
    "fastify-plugin": "1.6.1",
    "fastify-redis": "3.1.1",
    "fastify-twitch-ebs-tools": "1.0.2",
    "mongoose": "5.9.6",
    "starcraft2-api": "1.3.4"
  },
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/mongoose": "5.7.8",
    "@types/node": "12.11.7",
    "fastify-redis-mock": "1.0.0",
    "jest": "25.2.3",
    "npm-parallel": "2.0.1",
    "pino-pretty": "3.6.1",
    "prettier": "2.0.2",
    "rimraf": "3.0.2",
    "ts-jest": "25.2.1",
    "ts-mongoose": "0.0.21",
    "tsc-watch": "4.2.3",
    "tslint": "6.1.0",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-immutable": "6.0.1",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "3.8.3"
  }
}

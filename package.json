{
  "name": "sc2pte-backend",
  "version": "2.0.0",
  "private": true,
  "description": "StarCraft II Profile Twitch Extension (SC2PTE) - backend",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "npm run lint && npm run test && npm run clean && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint --project tsconfig.json",
    "runbas": "npm --prefix ../bnet-auth-service start",
    "watch": "tsc-watch --onSuccess \"npm start\"",
    "dev": "npm run watch | pino-pretty",
    "test": "jest",
    "clearTestCache": "jest --clearCache",
    "start": "node scripts/start.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukemnet/sc2pte-backend.git"
  },
  "keywords": [
    "starcraft",
    "starcraft2",
    "community",
    "api",
    "player",
    "backend"
  ],
  "author": "Łukasz Wójcik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukemnet/sc2pte-backend/issues"
  },
  "homepage": "https://github.com/lukemnet/sc2pte-backend#readme",
  "dependencies": {
    "fastify": "2.7.1",
    "fastify-blipp": "2.1.0",
    "fastify-caching": "5.0.0",
    "fastify-env": "1.0.1",
    "fastify-ioredis": "0.1.1",
    "fastify-log": "1.0.3",
    "fastify-plugin": "1.6.0",
    "fastify-redis": "3.1.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.17",
    "@types/node": "12.7.1",
    "fastify-redis-mock": "1.0.0",
    "jest": "24.8.0",
    "npm-parallel": "2.0.1",
    "pino-pretty": "3.2.1",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "ts-jest": "24.0.2",
    "tsc-watch": "2.4.0",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-immutable": "6.0.1",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.5.3"
  }
}
